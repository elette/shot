    <servlet>
        <servlet-name>CommandAction</servlet-name>
        <servlet-class>nlz.ctl.CommandAction</servlet-class>
        <init-param>
            <param-name>CTX_PATH</param-name>
            <param-value>/shot</param-value>
        </init-param>
        <init-param>
            <param-name>DATA_SOURCE</param-name>
            <param-value>jdbc/nlzDS</param-value>
        </init-param>
        <init-param>
            <param-name>LOG_LEVEL</param-name>
            <param-value>ERROR</param-value>
        </init-param>
        <init-param>
            <param-name>SYS_OUT</param-name>
            <param-value>Y</param-value>
        </init-param>
        <init-param>
            <param-name>FILE_OUT</param-name>
            <param-value>N</param-value>
        </init-param>
        <init-param>
            <param-name>LOG_DIR</param-name>
            <param-value>C:/apache-tomcat-8.5.9/logs/nlz</param-value>
        </init-param>
        <init-param>
            <param-name>CONFIG_PATH</param-name>
            <param-value>C:/apache-tomcat-8.5.9/webapps/shot/mon.xml</param-value>
        </init-param>
        <init-param>
            <param-name>NEWS_PATH</param-name>
            <param-value>C:/apache-tomcat-8.5.9/webapps/shot/news.xml</param-value>
        </init-param>
        <init-param>
            <param-name>CLIENT_PATH</param-name>
            <param-value>C:/apache-tomcat-8.5.9/webapps/shot/client.xml</param-value>
        </init-param>
        <init-param>
            <param-name>LOG_PATH</param-name>
            <param-value>C:/apache-tomcat-8.5.9/webapps/shot/logs</param-value>
        </init-param>
        <init-param>
            <param-name>HIST_PATH</param-name>
            <param-value>C:/apache-tomcat-8.5.9/webapps/shot/history</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommandAction</servlet-name>
        <url-pattern>/CommandAction</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

