<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
<!--
    <resource-ref>
        <description>NLZ DataSource</description>
        <res-ref-name>java:comp/env/jdbc/nlzDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
-->
    <servlet>
        <servlet-name>CommandAction</servlet-name>
        <servlet-class>nlz.ctl.CommandAction</servlet-class>
        <init-param>
            <param-name>CTX_PATH</param-name>
            <param-value>/shot</param-value>
        </init-param>
        <init-param>
            <param-name>DATA_SOURCE</param-name>
            <param-value>jdbc/nlzDS</param-value>
        </init-param>
        <init-param>
            <param-name>LOG_LEVEL</param-name>
            <param-value>ERROR</param-value>
        </init-param>
        <init-param>
            <param-name>SYS_OUT</param-name>
            <param-value>Y</param-value>
        </init-param>
        <init-param>
            <param-name>FILE_OUT</param-name>
            <param-value>N</param-value>
        </init-param>
        <init-param>
            <param-name>LOG_DIR</param-name>
            <param-value>C:/apache-tomcat-6.0.43/logs/nlz</param-value>
        </init-param>
        <init-param>
            <param-name>CONFIG_PATH</param-name>
            <param-value>C:/apache-tomcat-6.0.43/webapps/shot/mon.xml</param-value>
        </init-param>
        <init-param>
            <param-name>CLIENT_PATH</param-name>
            <param-value>C:/apache-tomcat-6.0.43/webapps/shot/client.xml</param-value>
        </init-param>
        <init-param>
            <param-name>LOG_PATH</param-name>
            <param-value>C:/apache-tomcat-6.0.43/webapps/shot/logs</param-value>
        </init-param>
        <init-param>
            <param-name>HIST_PATH</param-name>
            <param-value>C:/apache-tomcat-6.0.43/webapps/shot/history</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommandAction</servlet-name>
        <url-pattern>/CommandAction</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
</web-app>
